<idea-plugin>
    <id>com.plugin.gitmultimerge</id>
    <name>Git Multi Merge</name>
    <vendor email="allannascimentodossantos@gmail.com" url="https://github.com/AllanSantos-DV/plugin">Allan Santos</vendor>

    <description><![CDATA[
    Plugin para permitir o merge de uma branch source para múltiplos targets simultaneamente.
    
    Características:
    - Selecione uma branch source e até 5 branches target
    - Opção para squash commits durante o merge
    - Opção para deletar a branch source após o merge bem-sucedido
    - Visualização de progresso em tempo real
    ]]></description>

    <!-- Versão compatível com IntelliJ -->
    <idea-version since-build="231" until-build="999.*"/>

    <!-- Depende do módulo da plataforma IntelliJ e do plugin Git4Idea -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Extensões se necessário -->
    </extensions>

    <actions>
        <action id="GitMultiMerge.Action" 
                class="com.plugin.gitmultimerge.GitMultiMergeAction" 
                text="Multi Merge..." 
                description="Merge uma branch source em múltiplos targets">
            <add-to-group group-id="Git.MainMenu" anchor="after" relative-to-action="Git.Merge"/>
            <add-to-group group-id="Git.ContextMenu" anchor="after" relative-to-action="Git.Merge"/>
        </action>
    </actions>
</idea-plugin> 